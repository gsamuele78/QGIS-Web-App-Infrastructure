# File: .env
# System User Configuration
PUID=1000
PGID=1000

# Domain and Network Configuration
DOMAIN=qgis.yourdomain.com
DOMAIN_IP=your_server_ip

# Database Configuration
QWC_DB_NAME=qgis_sso_infrastructure
QWC_DB_USER=qgis_admin
QWC_DB_PASSWORD=generate_strong_password_here
QWC_DB_HOST=database
QWC_DB_PORT=5432

# Authentication Configuration
AUTH_SECRET_KEY=generate_256bit_secret_key_here
SESSION_TIMEOUT_MINUTES=120
ALLOWED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# NoVNC and QGIS Desktop Configuration
NOVNC_PASSWORD=optional_vnc_password
QGIS_DESKTOP_MEMORY_LIMIT=2G
QGIS_DESKTOP_CPU_LIMIT=1.5

# File Browser Configuration
FILE_BROWSER_MAX_UPLOAD_SIZE=1G
FILE_BROWSER_ALLOWED_EXTENSIONS=.qgs,.qgz,.shp,.geojson

# SSL and Security
SSL_CERTIFICATE_EMAIL=admin@yourdomain.com
LETS_ENCRYPT_STAGING=false

# External Service Configurations
DUCKDNS_TOKEN=your_duckdns_token
DUCKDNS_DOMAIN=yourdomain

# Logging and Monitoring
LOG_LEVEL=INFO
SYSLOG_SERVER=optional_syslog_server

# Optional Additional Configurations
ADDITIONAL_QGIS_PLUGINS=,processing,
QGIS_CUSTOM_CRS=EPSG:4326
